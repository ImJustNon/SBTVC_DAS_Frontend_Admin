<section class="section is-main-section">
    <div class="tile is-ancestor">
        <div class="tile is-parent">
            <div class="card tile is-child">
            <header class="card-header">
                <p class="card-header-title">
                <span class="icon"><i class="fa-solid fa-user-plus"></i></span>
                &nbsp&nbspเพิ่มผู้ใช้
                </p>
            </header>
            <div class="card-content">
                <form>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                          <label class="label">เลขประจำตัวนักเรียน</label>
                        </div>
                        <div class="field-body">
                          <div class="field is-narrow">
                            <input class="input" type="number" id="input_add_student_id" required>
                          </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">คำนำหน้า</label>
                        </div>
                        <div class="field-body">
                            <div class="field is-narrow">
                                <div class="control">
                                <div class="select is-fullwidth">
                                    <select id="input_add_student_prefix">
                                        <option selected disabled value="">เลือก...</option>
                                        <option value="นาย">นาย</option>
                                        <option value="นางสาว">นายสาว</option>
                                    </select>
                                </div>
                                </div>
                            </div>  
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                          <label class="label">ชื่อ</label>
                        </div>
                        <div class="field-body">
                          <div class="field is-narrow">
                            <input class="input" type="text" id="input_add_student_name" required>
                          </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                          <label class="label">นามกสุล</label>
                        </div>
                        <div class="field-body">
                          <div class="field is-narrow">
                            <input class="input" type="text" id="input_add_student_lastname" required>
                          </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">สาขา</label>
                        </div>
                        <div class="field-body">
                            <div class="field is-narrow">
                                <div class="control">
                                <div class="select is-fullwidth">
                                    <select id="input_add_student_branch">
                                        <option selected disabled value="">เลือก...</option>
                                        <option value="INFORMATION_TECHNOLOGY">เทคโนโลยีสารสนเทศ</option>
                                        <option value="ELECTRICAL_TECHNOLOGY">เทคโนโลยีไฟฟ้า</option>
                                        <option value="ELECTRONIC">อิเล็กทรอนิกส์</option>
                                        <option value="MECHATRONIC">เมคคาทรอนิกส์</option>
                                        <option value="PREMIUM">พรีเมียม</option>
                                    </select>
                                </div>
                                </div>
                            </div>  
                        </div>
                    </div>

                    <hr>
                    
                    <div class="field is-horizontal">
                        <div class="field-label is-normal"></div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <button type="button" class="button is-primary" id="add_user_btn">
                                        <i class="fa-solid fa-database"></i>
                                        &nbsp&nbspยืนยัน
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            </div>
        </div>
        <div class="tile is-parent">
            <div class="card tile is-child">
                <header class="card-header">
                    <p class="card-header-title">
                    <span class="icon"><i class="fa-solid fa-user-minus"></i></span>
                    &nbsp&nbspลบผู้ใช้
                    </p>
                </header>
                <div class="card-content">
                    <form>
                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <label class="label">เลขประจำตัวนักเรียน</label>
                            </div>
                            <div class="field-body">
                                <div class="field is-narrow">
                                    <input class="input" type="number" id="input_remove_student_id" required>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <div class="field is-horizontal">
                            <div class="field-label is-normal"></div>
                            <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <button type="button" class="button is-primary" id="remove_user_btn">
                                        <i class="fa-solid fa-database"></i>
                                        &nbsp&nbspยืนยัน
                                    </button>
                                </div>
                            </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="../js/manage_user_page.js"></script>